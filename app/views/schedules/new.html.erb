<div class="new">
  <h2 class="new__title">スケジュール新規作成</h2>

  <%= render 'shared/error', schedule: @schedule %>

  <div class="new__form">
    <%= form_with model: @schedule do |f|%>
      <table class="new__table">
        <tr>
          <th><%= f.label :title, "タイトル" %></th>
          <td><%= f.text_field :title, class: "new__text--title", maxlength: 30 %></td>
        </tr>
        <tr>
          <th><%= f.label :start_date, "開始日" %></th>
          <td><%= f.date_field :start_date, class: "new__date" %></td>
        </tr>
        <tr>
          <th><%= f.label :end_date, "終了日" %></th>
          <td><%= f.date_field :end_date, class: "new__date" %></td>
        </tr>
        <tr>
          <th><%= f.label :is_all_day, "終日" %></th>
          <td><%= f.check_box :is_all_day, class: "new__checkbox" %>
          <span class="new__checkbox--caution">終日の場合はチェックを入れます</span></td>
        </tr>
        <tr>
          <th><%= f.label :memo, "スケジュールメモ" %></th>
          <td><%= f.text_area :memo, class: "new__text--memo", maxlength: 500 %></td>
        </tr>
      </table>
      <%= f.submit "スケジュールを新規登録する", class: "new__btn" %>
    <% end %>

    <%= link_to("スケジュール一覧に戻る","/", class: "new__link--index") %>
  </div>
</div>
